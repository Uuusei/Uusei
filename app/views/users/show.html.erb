<body class="honomin">
  
  <div class="mypagepage2">
    <div class="pagepage">
    <h1>マイページ</h1>
      <div class="page1">
    <br>
        <p>名前 : <%= @user.name %></p>
        <br>
        <p>メールアドレス : <%= @user.email %></p>
        <br>
        <p>プロフィール : <%= @user.profile %></p>
<br>
        <% if current_user.id == @user.id %>
          <%= link_to "編集する", edit_user_registration_path %>
        <% end %>
      </div>
<br>
<br>
      <div class="page2">
        <h2>ユーザーの投稿一覧</h2>
        <div class="aiueo">
        <% @user.works.each do |t| %>
          <%= t.user.name %>
          <%= t.exercise %>
          <%= t.menu %>
        <% end %>
        </div>
      </div>
    </div>

    <div class="pagepage2">
      <h2>ユーザーがいいねした投稿一覧</h2>
    <div class="gohan">
      <% @user.disliked_works.each do |t| %>
        <%= t.user.name %>
        <%= t.exercise %>
        <%= t.menu %>
      <% end %>
    </div>
    </div>
    
  </div>
  </body>