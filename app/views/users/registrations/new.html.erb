<%= stylesheet_link_tag 'login', :media => "all" %>

<div class="body"></div>
  <div class="grad"></div>
  <div class="header">
    <div>Let's<span>exercise</span></div>
  </div>

  <br>

  <div class="login">
    <h2>Sign up</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

      <div class="field">
        <%= f.label :name %><br />
        <%= f.text_field :name, autofocus: true %>
      </div>

      <div class="field">
      <%= f.label :profile, id: "profile_label" %><br />
      <%= f.text_area :profile, id: "profile_text_area", autofocus: true %>  
      </div>

      <div class="field">
        <%= f.label :email %><br />
        <%= f.email_field :email, id:"profile_text_area", autofocus: true, autocomplete: "email" %>
      </div>

      <div class="field">
        <%= f.label :password %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "new-password" %>
      </div>

      <div class="field">
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
      </div>

      <div class="actions">
        <%= f.submit "Sign up" %>
      </div>
      
    <% end %>
  </div>